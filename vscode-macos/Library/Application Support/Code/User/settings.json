{
    "editor.fontSize": 14,
    "terminal.integrated.fontSize": 14,
    "editor.fontFamily": "Iosevka Slab, Monaco, monospace",
    "editor.renderWhitespace": "all",
    "editor.minimap.enabled": false,

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true
    },

    "workbench.colorTheme": "Gruvbox Dark (Medium)",
    "workbench.iconTheme": "material-icon-theme",

    "vim.enableNeovim": true,
    "vim.neovimPath": "nvim",
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.useCtrlKeys": true,
    "vim.surround": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors": {
        "normal": "#a89984",
        "insert": "#7ca96c",
        "visual": "#d7a423",
        "visualline": "#d7a423",
        "visualblock": "#d7a423",
        "replace": "#8ec17d"
    },
    "workbench.colorCustomizations": {
        "statusBar.background": "#a89984",
        "statusBar.noFolderBackground": "#a89984",
        "statusBar.debuggingBackground": "#a89984"
    },
    "workbench.sideBar.location": "right",

    "terminal.integrated.shell.osx": "/usr/bin/login",
    "terminal.integrated.shellArgs.osx": [
        "-pfql", "looselyrigorous", "/usr/local/bin/zsh"
    ],

    //"C_Cpp.intelliSenseEngine": "Default",

    "python.venvPath": "~/.pyenv/versions",
    "explorer.confirmDragAndDrop": false,
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": true
}
