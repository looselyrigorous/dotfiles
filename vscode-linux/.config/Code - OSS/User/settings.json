{
    "terminal.integrated.fontSize": 15,
    "editor.fontFamily": "'M+ 1mn', Iosevka SS07, Fira Code, Monaco, monospace",
    "terminal.integrated.fontFamily": "Iosevka SS07, Fira Code, Monaco, monospace",
    "editor.renderWhitespace": "all",
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true
    },
    "files.insertFinalNewline": true,

    "workbench.colorTheme": "Gruvbox Dark (Medium)",
    "workbench.iconTheme": "material-icon-theme",

    "workbench.colorCustomizations": {
        "statusBar.background": "#a89984",
        "statusBar.noFolderBackground": "#a89984",
        "statusBar.debuggingBackground": "#a89984"
    },
    "workbench.sideBar.location": "right",
    "workbench.activityBar.visible": false,

    "python.venvPath": "~/.pyenv/versions",

    "C_Cpp.intelliSenseEngine": "Default",
    
    "window.zoomLevel": 0,
    "window.menuBarVisibility": "toggle",

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "window.titleBarStyle": "native",
    "editor.fontSize": 15,
}
